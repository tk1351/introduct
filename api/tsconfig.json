{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "strict": true,
    "module": "commonJs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
